<%brightcove_account_id = get_brightcove_player().try(:brightcove_account_id)
brightcove_player_id = get_brightcove_player().try(:brightcove_player_id)
%>

<video id="myPlayerID"
  data-video-id="<%= reference_id%>"
  data-account="<%= brightcove_account_id%>"
  data-player="<%= brightcove_player_id%>"
  data-embed="default"
  data-application-id
  class="video-js"
  controls></video>

  <script src="//players.brightcove.net/<%= brightcove_account_id%>/<%= brightcove_player_id%>_default/index.min.js"></script>
  <script src="//players.brightcove.net/videojs-overlay/lib/videojs-overlay.js"></script>
